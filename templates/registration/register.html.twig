{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<main class="container-fluid">
        <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 p-3 mx-auto border rounded border-dark bg-login container-login">
            <div class="col-10 mx-auto">
                <img class="mx-auto" src="LOGO.JPG"/>
            </div>
            <div class="col-6 mx-auto pb-5">
    <h1>Registrate</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword) }}

        <br>
                    <button class="btn btn-lg btn-primary active">Registrar</button>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </main>
{% endblock %}
